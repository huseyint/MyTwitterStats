@{
	ViewBag.Title = "Index";
}
<h1>Upload your twitter archive</h1>
<p>Upload the <strong>tweets.zip</strong> file you have downloaded.</p>
	
<form action="/Home/UploadArchive" method="post" enctype="multipart/form-data">
	<div class="fileupload fileupload-new" data-provides="fileupload" style="float: left;">
		<div class="input-append">
			<div class="uneditable-input span3">
				<i class="icon-file fileupload-exists"></i> <span class="fileupload-preview"></span>
			</div>
			<span class="btn btn-file"><span class="fileupload-new">Select file</span><span class="fileupload-exists">Change</span><input type="file" name="file" id="file" /></span>
			<a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
		</div>
	</div>

	<input type="submit" class="btn btn-primary" value="Upload" style="margin-left: 10px;" />
</form>